        <StackLayout Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Border Stroke="Transparent" Background="#FFFFFF" StrokeThickness="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="100,100,0,0"/>
                </Border.StrokeShape>

                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Text="Around The World" TextColor="#000000" FontSize="16" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

                        <Border Grid.Row="1" Stroke="Transparent" Background="#8174CF" StrokeThickness="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >

                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="60,60,60,60"/>
                            </Border.StrokeShape>

                            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="12,12,12,28">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Text="United States" FontSize="12" TextColor="#FFFFFF" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                                <Label Grid.Row="1" Grid.Column="0" Text="New York" FontSize="22" FontAttributes="Bold" TextColor="#FFFFFF" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                <Label Grid.Row="2" Grid.Column="0" Text="Clear" FontSize="12" TextColor="#FFFFFF" HorizontalOptions="FillAndExpand" VerticalOptions="End"/>

                                <StackLayout Grid.RowSpan="3" Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

                                </StackLayout>

                            </Grid>
                        </Border>

                        <Border Grid.Row="2" Stroke="Transparent" Background="#8174CF" StrokeThickness="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >

                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="60,60,60,60"/>
                            </Border.StrokeShape>

                            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="12,12,12,28">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Text="United States" FontSize="12" TextColor="#FFFFFF" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                                <Label Grid.Row="1" Grid.Column="0" Text="New York" FontSize="22" FontAttributes="Bold" TextColor="#FFFFFF" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                <Label Grid.Row="2" Grid.Column="0" Text="Clear" FontSize="12" TextColor="#FFFFFF" HorizontalOptions="FillAndExpand" VerticalOptions="End"/>

                                <StackLayout Grid.RowSpan="3" Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

                                </StackLayout>

                            </Grid>
                        </Border>

                        <Border Grid.Row="3" Stroke="Transparent" Background="#8174CF" StrokeThickness="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >

                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="60,60,60,60"/>
                            </Border.StrokeShape>

                            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="12,12,12,28">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
